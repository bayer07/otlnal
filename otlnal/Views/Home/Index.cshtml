<h2>Продукты</h2>

<table class="table">
<th>Название</th>
<th>Тип</th>
<th>Количество</th>
<th></th>
<tr ng-repeat="product in products">
  <td>
    <input type="text" ng-model="product.Name" ng-disabled="!product.isEdit">
  </td>
  <td>
    <select ng-options="type.Name for type in types track by type.Id" ng-model="product.Type" ng-disabled="!product.isEdit"></select>
  </td>
  <td>
    <input type="text" ng-model="product.Count" ng-disabled="!product.isEdit">
  </td>
  <td>
    <button type="button" class="btn btn-default" ng-click="product.isEdit = true" ng-hide="product.isEdit">
      <span class="glyphicon glyphicon-edit"></span>
    </button>
    <button type="button" class="btn btn-default" ng-click="save(product)" ng-show="product.isEdit">
      <span class="glyphicon glyphicon-saved"></span>
    </button>
  </td>
</tr>
</table>
<div class="alert alert-danger" role="alert" ng-show="error">{{error}}</div>
